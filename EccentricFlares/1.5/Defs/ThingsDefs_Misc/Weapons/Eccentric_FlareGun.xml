<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Eccentric_MultiFlareGun</defName>
    <label>multi flare gun</label>
    <description>A multi flare gun that fires illumination flares and chemlights.</description>
    <graphicData>
      <texPath>Eccentric/Things/FlareGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
	<generateCommonality>0.0</generateCommonality>
    <techLevel>Industrial</techLevel>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <Mass>1.0</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.8</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags Inherit="False">
      <li>EccentricFlare</li>
	  <li MayRequire="mlie.yayoscombat3">ammo_industrial_fire/48/1</li>
    </weaponTags>
    <costList>
      <Steel>20</Steel>
      <Chemfuel>40</Chemfuel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>



      <li>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
		<label>Flare shot</label>
        <defaultProjectile>Proj_MultiEccentricFlare</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>33.9</range>
        <forcedMissRadius>0.1</forcedMissRadius>
        <soundCast>Eccentric_FlareGunFire</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
		<requireLineOfSight>false</requireLineOfSight>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>

      <li>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
		<label>Red chemlight shot</label>
        <defaultProjectile>Proj_MultiEccentricChemlightRed</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>33.9</range>
        <forcedMissRadius>0.1</forcedMissRadius>
        <soundCast>Eccentric_FlareGunFire</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
		<requireLineOfSight>false</requireLineOfSight>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>

      <li>
        <verbClass>Verb_LaunchProjectile</verbClass>
