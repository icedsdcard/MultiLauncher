      </li>
	 </comps>


    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>





  <!-- Projectiles -->



  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>Proj_MultiEccentricFlare</defName>
    <label>flare</label>
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Eccentric/Things/RoadFlare</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <explosionRadius>.5</explosionRadius>
      <damageDef>Flame</damageDef>
      <damageAmountBase>5</damageAmountBase>
      <explosionDelay>0</explosionDelay>
      <speed>12</speed>
      <flyOverhead>true</flyOverhead>
	  <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
	  <shadowSize>0.5</shadowSize>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <soundExplode>Eccentric_FlareHit</soundExplode>
      <preExplosionSpawnThingDef>EccentricBurningFlare</preExplosionSpawnThingDef>
    </projectile>
  </ThingDef>

